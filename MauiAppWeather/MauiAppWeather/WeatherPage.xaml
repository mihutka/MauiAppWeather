<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiAppWeather.WeatherPage"
    Title="Погода">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label x:Name="CityLabel" FontSize="24" HorizontalOptions="Center"/>
        <Label x:Name="TemperatureLabel" FontSize="24" HorizontalOptions="Center"/>
        <Label x:Name="DescriptionLabel" FontSize="18" HorizontalOptions="Center"/>
        <Image x:Name="WeatherIconImage" WidthRequest="100" HeightRequest="100" HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>
